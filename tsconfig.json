{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "target": "ES2019",
    "sourceMap": true,
    "lib": ["dom", "dom.iterable", "esnext", "es6"],
    "outDir": "build/dist",
    "incremental": true,
    "jsx": "react-jsx",
    "baseUrl": "./",
    "types": ["node", "jest", "@testing-library/jest-dom"],
    "typeRoots": ["node_modules/@types", "src/types"]
  },
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "src/setupTests.ts"
  ]
}
